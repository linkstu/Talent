@model Talent.Articles.ViewModels.ArticleVMs.ArticleVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:textbox field="Entity.Subject" />
        <wt:combobox field="Entity.CategoryID" items="AllCategorys" />
        <wt:textbox field="Entity.Author" />
        <wt:textbox field="Entity.Source" />
        <wt:switch field="Entity.IsPublished" />
        <wt:datetime field="Entity.DateOfPublish" />
        <wt:richtextbox field="Entity.Context" height="320"></wt:richtextbox>
    </wt:row>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
