@model Talent.Articles.ViewModels.ArticleVMs.ArticleListVM
@inject IStringLocalizer<Program> Localizer;

<wt:searchpanel vm="@Model" reset-btn="true">
    <wt:row items-per-row="ItemsPerRowEnum.Four">
        <wt:textbox field="Searcher.Subject" />
        <wt:textbox field="Searcher.Author" />
        <wt:combobox label-text="类别" field="Searcher.CategoryID" items="Searcher.AllCategorys" empty-text="@Localizer["Sys.All"]" />
        <wt:datetime field="Searcher.DateOfPublish" range="true" />
    </wt:row>
</wt:searchpanel>
<wt:grid vm="@Model" url="/Articles/Article/Search" />
