@model Talent.Base.ViewModels.BannerVMs.BannerVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
<wt:row items-per-row="ItemsPerRowEnum.One">
<wt:textbox field="Entity.Title" />
<wt:textbox field="Entity.Url" />
<wt:upload field="Entity.ImageID" />
<wt:textbox field="Entity.SortIndex" />
<wt:switch field="Entity.IsEnabled" />
</wt:row>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
