@model Talent.Base.ViewModels.ServiceCategoryVMs.ServiceCategoryVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model" label-width="120 ">
    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:textbox field="Entity.Name" />
        <wt:combobox field="Entity.Type" />
    </wt:row>
    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:textbox field="Entity.LimitedValuation" />
    </wt:row>
    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:textbox field="Entity.LimitedCount" />
    </wt:row>
    <wt:row items-per-row="ItemsPerRowEnum.One">
        <wt:textbox field="Entity.Description" />
        <wt:switch field="Entity.IsEnabled" />
        <wt:textbox field="Entity.SortIndex" />
    </wt:row>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
<script>
    TypeChange({ value: $('[name="Entity.Type"]').val() });

    function TypeChange(data) {
        console.log(data)
    }
</script>